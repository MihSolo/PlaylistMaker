<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.UI.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnPrimary"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_main_act"
            android:layout_gravity="top"
            android:background="?attr/colorOnPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/mergin_16dp"
                android:background="?attr/colorOnPrimary"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/main_titel"
                android:textFontWeight="500"
                android:textSize="@dimen/text_size" />
        </FrameLayout>

        <Button
            android:id="@+id/search"
            style="@style/ButtonMainStyle"
            android:layout_marginTop="@dimen/mergin_16dp"
            android:layout_marginBottom="@dimen/margin_bottom_search"
            android:text="@string/search"
            app:icon="@drawable/search"
            tools:ignore="RtlCompat" />


        <Button
            android:id="@+id/library"
            style="@style/ButtonMainStyle"
            android:text="@string/library"
            app:icon="@drawable/library"
            tools:ignore="RtlCompat" />


        <Button
            android:id="@+id/settings"
            style="@style/ButtonMainStyle"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin_bottom_setting_main_act"
            android:text="@string/settings"
            app:icon="@drawable/settings"
            tools:ignore="RtlCompat" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>